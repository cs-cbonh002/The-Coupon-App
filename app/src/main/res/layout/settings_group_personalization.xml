<!-- CardView for Account Settings Items -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorPrimaryContainer"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Theme -->
        <RelativeLayout
            android:id="@+id/themeSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <!-- Chevron Icon -->
            <ImageView
                android:id="@+id/navigateTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/navigate_to_setting"
                android:src="@drawable/ic_navigate_next" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/txtTitleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Theme"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/txtDescriptionTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitleTheme"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@id/navigateTheme"
                android:text="Select a theme for the app"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant" />

        <!-- Danger Assessment -->
        <RelativeLayout
            android:id="@+id/dangerAssessmentSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp">

            <!-- Chevron Icon -->
            <ImageView
                android:id="@+id/navigateDangerAssessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/navigate_to_setting"
                android:src="@drawable/ic_navigate_next" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/txtTitleDangerAssessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Danger Assessment"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="18sp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/txtDescriptionDangerAssessment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitleDangerAssessment"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@id/navigateDangerAssessment"
                android:text="Take a danger assessment to get suggestions for app settings"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
