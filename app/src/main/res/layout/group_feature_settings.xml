<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CardView for Account Settings Items -->
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Enable Location -->
            <RelativeLayout
                android:id="@+id/locationSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">


                <LinearLayout
                    android:id="@+id/txtTitleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/txt_user_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Enable location use"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

                </LinearLayout>

                <!-- Switch  -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/navigate_to_setting"/>

            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />

            <!-- Enable Microphone -->
            <RelativeLayout
                android:id="@+id/microphoneSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/txtTitleMicrophone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Enable microphone use"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

                </LinearLayout>
                <!-- Chevron Icon -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchMicrophone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/navigate_to_setting"/>

            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />

            <!-- Enable Notifications -->
            <RelativeLayout
                android:id="@+id/notificationsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">


                <LinearLayout
                    android:id="@+id/txtTitleNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Enable notifications"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

                </LinearLayout>
                <!-- Chevron Icon -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/navigate_to_setting"/>

            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />

            <!-- Wake Words -->
            <RelativeLayout
                android:id="@+id/wakeWordsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/navigateWakeWords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_navigate_next"
                    android:contentDescription="@string/navigate_to_setting"/>

                <!-- Title Text -->
                <TextView
                    android:id="@+id/txtTitleWakeWords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Wake Words"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                <!-- Description Text -->
                <TextView
                    android:id="@+id/txtDescriptionWakeWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitleWakeWords"
                    android:layout_toStartOf="@id/navigateWakeWords"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="Update and manage your wake words"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />

            <!-- Audio Classifier -->
            <RelativeLayout
                android:id="@+id/audioClassifierSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/navigateAudioClassifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_navigate_next"
                    android:contentDescription="@string/navigate_to_setting"/>

                <!-- Title Text -->
                <TextView
                    android:id="@+id/txtTitleAudioClassifier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Audio Classifier"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                <!-- Description Text -->
                <TextView
                    android:id="@+id/txtDescriptionAudioClassifier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitleAudioClassifier"
                    android:layout_toStartOf="@id/navigateAudioClassifier"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="Enable Audio Classifier"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>