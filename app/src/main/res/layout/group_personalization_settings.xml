<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- CardView for Account Settings Items -->
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Theme -->
            <RelativeLayout
                android:id="@+id/themeSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/navigateTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_navigate_next"
                    android:contentDescription="@string/navigate_to_setting"/>

                <!-- Title Text -->
                <TextView
                    android:id="@+id/txtTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Theme"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                <!-- Description Text -->
                <TextView
                    android:id="@+id/txtDescriptionTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitleTheme"
                    android:layout_toStartOf="@id/navigateTheme"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="Select a theme for the app"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>


            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />

            <!-- Danger Assessment -->
            <RelativeLayout
                android:id="@+id/dangerAssessmentSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <!-- Chevron Icon -->
                <ImageView
                    android:id="@+id/navigateDangerAssessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_navigate_next"
                    android:contentDescription="@string/navigate_to_setting"/>

                <!-- Title Text -->
                <TextView
                    android:id="@+id/txtTitleDangerAssessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Danger Assessment"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                <!-- Description Text -->
                <TextView
                    android:id="@+id/txtDescriptionDangerAssessment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitleDangerAssessment"
                    android:layout_toStartOf="@id/navigateDangerAssessment"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="4dp"
                    android:text="Take a danger assessment to get suggestions for app settings"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>